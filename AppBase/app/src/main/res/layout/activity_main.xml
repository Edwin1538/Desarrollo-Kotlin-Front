<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">

	<!-- Logo de la app -->
	<TextView
			android:text="SIGA"
			android:layout_width="115dp"
			android:layout_height="47dp"
			android:id="@+id/textViewTitulo"
			android:textSize="28sp"
			android:textStyle="bold"
			android:textColor="#2E7D32"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintVertical_bias="0.125" app:layout_constraintHorizontal_bias="0.493"/>
	<ImageView
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:id="@+id/imageViewLogo"
			app:layout_constraintTop_toBottomOf="@+id/textViewTitulo"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="30dp"/>

	<Button
			android:text="Ver Docentes"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:id="@+id/buttonDocentes"
			android:onClick="mostrarDocentes"
			android:textSize="16sp"
			android:backgroundTint="#1976D2"
			app:layout_constraintTop_toBottomOf="@+id/imageViewLogo"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="50dp"/>

	<Button
			android:text="Ver Acudientes"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:id="@+id/buttonAcudientes"
			android:onClick="mostrarAcudientes"
			android:textSize="16sp"
			android:backgroundTint="#388E3C"
			app:layout_constraintTop_toBottomOf="@+id/buttonDocentes"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>